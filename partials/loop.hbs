<section class="main-content pi-grid">
    <div class="pi-container">
        <div class="pi-row">

            <div class="pi-content">
                {{#foreach posts}}
                    <article class="post {{post_class}}">

                        <div class="post-media">
                            <div class="images">
                                {{#if image}}
                                    <a href="{{url}}"><img src='{{image}}' alt='{{title}}' /></a>
                                {{/if}}
                            </div>
                        </div>

                        <div class="post-body">
                            
                            <div class="post-title text-uppercase">
                                <h2><a href="{{url}}">{{title}}</a></h2>
                            </div>

                            <div class="post-cat">
                                {{#if tags}}
                                <ul>
                                    {{#foreach tags}}
                                      <li>
                                        <a href="{{url}}" title="{{name}}" class="tag-{{id}}">{{name}}</a>
                                      </li>  
                                    {{/foreach}}
                                </ul>
                                {{/if}}
                            </div>

                            <hr class="pi-divider">
                            
                            <div class="post-entry">
                                <p>{{excerpt}}</p>
                            </div>

                            <div class="post-foot">
                                <div class="tb">
                                    <div class="post-more tb-cell">
                                        <a href="{{url}}">Read more</a>
                                    </div>

                                    <div class="post-social tb-cell">
                                        <a target="_blank" href="http://www.facebook.com/sharer.php?u={{url}}&amp;t={{title}}"><i class="fa fa-facebook"></i></a>
                                        <a target="_blank" href="http://twitthis.com/twit?url={{url}}"><i class="fa fa-twitter"></i></a>
                                        <a target="_blank" href="https://www.linkedin.com/shareArticle?mini=true&url={{url}}&title={{title}}&summary={{excerpt}}&source="><i class="fa fa-linkedin"></i></a> 
                                    </div>

                                </div>
                            </div>

                        </div>

                    </article>
                {{/foreach}}

                {{#if pagination}}
                    {{pagination}}
                {{/if}}
            </div>

            {{> sidebar}}

        </div>
    </div>
</section>